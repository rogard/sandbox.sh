bib_field_replace()
{
    key="$1";
    pattern_line="$key"'=';
    pattern_value='.+=\{(.+)\}[,]';
    replace="$2";
    line=$(grep -E "$pattern_line" < "$3")
    if (( $? == 0 ))
    then
        echo "$line" | sed -E "s/$pattern_value/$replace/"
    else
        error_exit\
             $(printf "%s has no line matching %s" "$3" "$pattern_line")
    fi
}
