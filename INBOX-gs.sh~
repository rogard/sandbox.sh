# !/bin/bash

working_directory='../INBOX'

printf "%s\n%s\n"\
       "[identifiant].pdf-->[identifiant].pdf.trash"\
       "[identifiant].pdf-->[identifiant.gs.pdf]."
printf "%s\n%s\n%s"\
       "Avertissement:"\
       "comparer *gs* et *trash*."\
       "et supprimer celui qui est inf√©rieur"
find "$working_directory" -type f -name '*pdf'\
    | while IFS= read -r path;
do
     ghostscript -sDEVICE=pdfwrite\
    -dCompatibilityLevel=1.4\
    -dPDFSETTINGS=/ebook\
    -dNOPAUSE -dQUIET -dBATCH\
    -sOutputFile="${path%.pdf}.gs.pdf"\
    "$path"
done
